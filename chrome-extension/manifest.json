{
  "manifest_version": 3,
  "name": "AwasBot Shield",
  "version": "1.0",
  "description": "Real-time scam protection powered by Google Web Risk & Gemini.",
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://*/*",
    "YOUR_CLOUD_RUN_URL_HERE/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}